rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isOwner(userId);
      allow delete: if false;
    }
    
    match /friends/{friendshipId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isSignedIn();
    }
    
    match /userStatus/{userId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId);
    }
    
    match /savedDates/{dateId} {
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }
    
    match /sharedDates/{dateId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update: if isSignedIn();
      allow delete: if isSignedIn() && resource.data.userId == request.auth.uid;
      
      match /messages/{messageId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
        allow update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
      }
    }
    
    match /surpriseDates/{surpriseId} {
      allow read: if isSignedIn() && (
        resource.data.creatorId == request.auth.uid ||
        resource.data.partnerEmail == request.auth.token.email
      );
      allow create: if isSignedIn() && request.resource.data.creatorId == request.auth.uid;
      allow update: if isSignedIn() && (
        resource.data.creatorId == request.auth.uid ||
        resource.data.partnerEmail == request.auth.token.email
      );
      allow delete: if isSignedIn() && resource.data.creatorId == request.auth.uid;
    }
    
    match /conversations/{conversationId} {
      allow read: if isSignedIn() && request.auth.uid in resource.data.participants;
      allow create: if isSignedIn() && request.auth.uid in request.resource.data.participants;
      allow update: if isSignedIn() && request.auth.uid in resource.data.participants;
      allow delete: if false;
    }
    
    match /messages/{messageId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }
    
    match /friendRequests/{requestId} {
      allow read: if isSignedIn() && (
        resource.data.fromUserId == request.auth.uid ||
        resource.data.toUserId == request.auth.uid
      );
      allow create: if isSignedIn() && request.resource.data.fromUserId == request.auth.uid;
      allow update, delete: if isSignedIn() && (
        resource.data.fromUserId == request.auth.uid ||
        resource.data.toUserId == request.auth.uid
      );
    }
    
    match /typing/{typingId} {
      allow read, create, update, delete: if isSignedIn();
    }
    
    match /notifications/{notificationId} {
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }
    
    match /userStats/{userId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId);
    }
    
    match /gameStats/{userId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId);
    }
    
    match /achievements/{achievementId} {
      allow read: if isSignedIn();
      allow write: if false;
    }
    
    match /userAchievements/{odcId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && request.resource.data.userId == request.auth.uid;
    }
    
    match /challenges/{challengeId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }
    
    match /dateMemories/{memoryId} {
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }
    
    match /dateStreaks/{odcId} {
      allow read, write: if isSignedIn();
    }
    
    match /completedChallenges/{odcId} {
      allow read, write: if isSignedIn();
    }
    
    match /payments/{paymentId} {
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow write: if false;
    }
    
    match /subscriptions/{userId} {
      allow read: if isOwner(userId);
      allow write: if false;
    }
    
    match /dailyChallenges/{userId} {
      allow read, write: if isOwner(userId);
    }
  }
}
